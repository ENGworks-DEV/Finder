<Window x:Class="EngFinder.View.FrmMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngFinder.View"
             mc:Ignorable="d" 
             Title=""
             d:DesignHeight="550" Loaded="Window_Loaded" Width="520" >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Column="0" Header="Filter"  Grid.Row="0" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="100" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="250" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Label Name="lblCategory" Content="Category" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
                    <ListBox Grid.Row="1" Grid.Column="0" Name="lbActors"    ItemsSource="{Binding CategoryObjects}" Grid.ColumnSpan="2" >
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}" Click="CheckBox_Click"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Label Content="Search" Grid.Row="2" Grid.Column="0" />
                    <TextBox Name="TxtSearch" Grid.Row="2" Grid.Column="1" TextChanged="TxtSearch_TextChanged"/>
                    <StackPanel Grid.ColumnSpan="2"  Grid.Row="3"  >
                        <ListBox Name="ListParameter" ItemsSource="{Binding RevitParameters}" DisplayMemberPath="Name" Height="246" SelectionChanged="ListParameter_SelectionChanged" >

                        </ListBox>
                    </StackPanel>
                    <TextBox Name="txtFilter" Grid.Column="1" Grid.Row="4" />
                    <Button Grid.Column="1" Grid.Row="4" Name="FilterButton" HorizontalAlignment="Right"   Click="FilterButton_Click" Width="19"   />
                    <Label Content="Value" Grid.Row="4" Grid.Column="0" />
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Element"  Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,-29,0" >

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="400" />
                        <RowDefinition Height="50" />

                    </Grid.RowDefinitions>
                 
                    <ListView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Name="ElementListView" SelectionChanged="ElementListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn  DisplayMemberBinding="{Binding Path=Name}">

                                </GridViewColumn >
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBlock Name="TextBlockError" Grid.Row="2" TextWrapping="Wrap" Text="" />
                </Grid>


            </GroupBox>
        </Grid>
    </Grid>
</Window>



