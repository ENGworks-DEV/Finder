<Window x:Class="EngFinder.View.FrmMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngFinder.View"
             mc:Ignorable="d" 
             Title="Global Settings"
             d:DesignHeight="500" d:DesignWidth="400" Loaded="Window_Loaded" >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <GroupBox Grid.Column="0" Header=""  Grid.Row="0" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="250" />
                    </Grid.RowDefinitions>
                    

                    <ListBox Grid.Row="0" Grid.Column="0" Name="lbActors"    ItemsSource="{Binding CategoryObjects}" Grid.ColumnSpan="2" >
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Focusable" Value="False"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}" Click="CheckBox_Click"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Label Content="Search" Grid.Row="1" Grid.Column="0" />
                    <TextBox Name="TxtSearch" Grid.Row="1" Grid.Column="1" TextChanged="TxtSearch_TextChanged"/>
                    <StackPanel Grid.ColumnSpan="2"  Grid.Row="3" >
                        <ListBox Name="ListParameter" ItemsSource="{Binding RevitParameters}" DisplayMemberPath="Name" Height="246" >
                            
                        </ListBox>
                    </StackPanel>

                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Filter"  Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,-29,0" >

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <TextBox Name="txtFilter" Grid.Column="0" Grid.Row="0" />
                    <Button Grid.Column="1" Grid.Row="0" Name="FilterButton" HorizontalAlignment="Left"   Click="FilterButton_Click" Width="19"   />
                </Grid>
               
                
            </GroupBox>
        </Grid>
    </Grid>
</Window>



